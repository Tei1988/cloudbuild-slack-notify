{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
